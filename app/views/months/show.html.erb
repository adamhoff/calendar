<h1 class="month_name"><%= @month.name %> <h4 class="back"><%= link_to 'Back', root_path %> </h4> </h1>
<div class="container">
  <% @month.days.each do |day| %>
    <div class="day">
      <h3 class="date"><%= day.date%><h5 class="edit"><%= link_to 'Edit', edit_month_day_path(day.month_id, day.date) %></h5></h3>
      <hr>
        <li class="content"><%= day.content %></li>
        <li class="content"><%= day.content1 %></li>
        <li class="content"><%= day.content2 %></li>
        <li class="content"><%= day.content3 %></li>
    </div>
  <% end %>
</div>
